{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "vcpkg-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        }
      }
    },
    {
      "name": "windows-base",
      "hidden": true,
      "inherits": "vcpkg-base",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "inherits": "vcpkg-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "macos-base",
      "hidden": true,
      "inherits": "vcpkg-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "x64-windows-debug",
      "displayName": "Windows x64 Debug",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "x64-windows-release",
      "displayName": "Windows x64 Release",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "x64-windows-full",
      "displayName": "Windows x64 Release (Full Features)",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "BUILD_CTL": "ON",
        "BUILD_ORM": "ON",
        "BUILD_POSTGRESQL": "ON",
        "BUILD_MYSQL": "ON",
        "BUILD_SQLITE": "ON",
        "BUILD_REDIS": "ON",
        "BUILD_BROTLI": "ON",
        "BUILD_YAML_CONFIG": "ON",
        "USE_SPDLOG": "ON"
      }
    },
    {
      "name": "x64-windows-static",
      "displayName": "Windows x64 Static Release",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static",
        "BUILD_SHARED_LIBS": "OFF",
        "BUILD_CTL": "ON",
        "BUILD_ORM": "ON",
        "BUILD_POSTGRESQL": "ON",
        "BUILD_MYSQL": "ON",
        "BUILD_SQLITE": "ON",
        "BUILD_REDIS": "ON",
        "BUILD_BROTLI": "ON",
        "BUILD_YAML_CONFIG": "ON",
        "USE_SPDLOG": "ON"
      }
    },
    {
      "name": "x64-linux-debug",
      "displayName": "Linux x64 Debug",
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    },
    {
      "name": "x64-linux-release",
      "displayName": "Linux x64 Release",
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    },
    {
      "name": "x64-osx-debug",
      "displayName": "macOS x64 Debug",
      "inherits": "macos-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-osx"
      }
    },
    {
      "name": "x64-osx-release",
      "displayName": "macOS x64 Release",
      "inherits": "macos-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-osx"
      }
    },
    {
      "name": "arm64-osx-debug",
      "displayName": "macOS ARM64 Debug",
      "inherits": "macos-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "arm64-osx"
      }
    },
    {
      "name": "arm64-osx-release",
      "displayName": "macOS ARM64 Release",
      "inherits": "macos-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "arm64-osx"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "x64-windows-debug",
      "configurePreset": "x64-windows-debug"
    },
    {
      "name": "x64-windows-release",
      "configurePreset": "x64-windows-release"
    },
    {
      "name": "x64-windows-static",
      "configurePreset": "x64-windows-static"
    },
    {
      "name": "x64-linux-debug",
      "configurePreset": "x64-linux-debug"
    },
    {
      "name": "x64-linux-release",
      "configurePreset": "x64-linux-release"
    },
    {
      "name": "x64-osx-debug",
      "configurePreset": "x64-osx-debug"
    },
    {
      "name": "x64-osx-release",
      "configurePreset": "x64-osx-release"
    },
    {
      "name": "arm64-osx-debug",
      "configurePreset": "arm64-osx-debug"
    },
    {
      "name": "arm64-osx-release",
      "configurePreset": "arm64-osx-release"
    }
  ],
  "testPresets": [
    {
      "name": "x64-windows-debug",
      "configurePreset": "x64-windows-debug"
    },
    {
      "name": "x64-windows-release",
      "configurePreset": "x64-windows-release"
    },
    {
      "name": "x64-linux-debug",
      "configurePreset": "x64-linux-debug"
    },
    {
      "name": "x64-linux-release",
      "configurePreset": "x64-linux-release"
    }
  ]
}
